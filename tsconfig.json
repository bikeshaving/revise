{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "strict": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "target": "es2015"
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/*"]
}
