{
  "name": "@bikeshaving/revise",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "shx rm -rf ./lib",
    "prebuild": "yarn clean",
    "build": "tsc --sourceMap src",
    "watch": "yarn run build -w",
    "develop": "yarn test --watch",
    "test": "jest --rootDir src",
    "lint": "eslint --ext js,ts src",
    "typecheck": "tsc --noEmit src"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "workspaces": [
    ".",
    "packages/*"
  ]
}
